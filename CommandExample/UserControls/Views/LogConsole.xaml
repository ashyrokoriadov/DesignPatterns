<UserControl x:Class="CommandExample.UserControls.Views.LogConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandExample.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="205" d:DesignWidth="405">
    <GroupBox Header="Console" HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="400">
        <ScrollViewer>
            <TextBlock Text="{Binding LogMessage}" Margin="5"/>
        </ScrollViewer>
    </GroupBox>
</UserControl>
